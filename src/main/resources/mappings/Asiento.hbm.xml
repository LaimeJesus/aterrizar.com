<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.domain.Asiento" table="Asiento">
		<id name="idAsiento" type="java.lang.Integer">
			<column name="idAsiento"/>
			<generator class="native"/>
		</id>
		  
		<property name="categoria" column="categoria" not-null="true">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">ar.edu.unq.epers.aterrizar.domain.categorias.TipoDeCategoria</param>
			</type>
		</property>
		
       <one-to-one name="reservadoPorUsuario" class="ar.edu.unq.epers.aterrizar.domain.Usuario"
       		cascade="save-update">
       </one-to-one>
	</class>
</hibernate-mapping>