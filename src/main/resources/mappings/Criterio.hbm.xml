<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.domain.buscador.criterios.Criterio" table="Criterio">
		
		<id name="idCriterio" type="java.lang.Integer" column="idCriterio">
			<generator class="native"/>
		</id>
	    <discriminator column="discriminator" type="string"/>
	
		<subclass name="ar.edu.unq.epers.aterrizar.domain.buscador.criterios.CriterioCompuesto" discriminator-value="Compuesto">
			<join table="CriterioCompuesto">
	   	        <key column="idCriterio"/>
		    	<many-to-one name="filtradoPor"	column="idCriterio"	unique="false"/>
		      	<property name="operador" type="string">
		      		<column name="Operador" length="80" not-null="true" unique="false"/>
		      	</property>
			</join>
		</subclass>
		
		<subclass name="ar.edu.unq.epers.aterrizar.domain.buscador.criterios.CriterioPorOrigen" discriminator-value="Origen">
			<join table="CriterioPorOrigen">
				<key column="idCriterio"/>
					<property name="destino" type="string">
						<column name="destino" length="80" not-null="true" unique="false" />
					</property>
			</join>
		</subclass>

	</class>
</hibernate-mapping>